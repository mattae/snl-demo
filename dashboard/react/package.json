{
    "name": "react-charts-frontend",
    "version": "1.0.0",
    "scripts": {
        "start": "vite",
        "build": "tsc && vite build",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "java:jar": "./mvnw -ntp verify -DskipTests --batch-mode",
        "dev:run": "./mvnw spring-boot:run -Dspring-boot.run.profiles=dev",
        "translate": " yarn json-autotranslate --type keybased -i src/main/resources/installers/react-charts/i18n -c translation_config.json  --fix-inconsistencies -m i18next --directory-structure ngx-translate",
        "test": "npx jest"
    },
    "type": "module",
    "dependencies": {
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "@material/material-color-utilities": "^0.2.7",
        "@mui/icons-material": "^5.11.16",
        "@mui/material": "^5.13.1",
        "@mui/styled-engine-sc": "^5.12.0",
        "@mui/x-charts": "^7.24.1",
        "i18next": "^24.0.2",
        "i18next-browser-languagedetector": "^8.0.0",
        "i18next-chained-backend": "^4.6.2",
        "i18next-http-backend": "^3.0.1",
        "lodash": "^4.17.21",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-i18next": "^15.1.3",
        "react-router-dom": "^6.11.1",
        "react-scrollbars-custom": "^4.1.1",
        "styled-components": "^5.3.10"
    },
    "devDependencies": {
        "@module-federation/vite": "^1.1.8",
        "@tailwindcss/typography": "^0.5.15",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.0.1",
        "@types/jest": "^29.5.1",
        "@types/lodash": "^4.17.13",
        "@types/node": "^20.1.3",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitejs/plugin-react": "^4.0.0",
        "chroma-js": "^3.1.2",
        "eslint": "^8.38.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "msw": "^2.6.6",
        "tailwind-material-colors": "^3.2.2",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.0.4",
        "vite": "^4.3.2",
        "vite-plugin-progress": "^0.0.7",
        "vite-plugin-static-copy": "^2.2.0"
    },
    "msw": {
        "workerDirectory": [
            "public"
        ]
    }
}
